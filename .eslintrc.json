{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": ["eslint:recommended"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"keyword-spacing": ["error", {
			"after": true,
			"before": true
		}],
		"linebreak-style": ["error", "windows"],
		"max-len": ["error", 120],
		"max-statements-per-line": ["error", {
			"max": 2
		}],
		"no-multi-spaces": "error",
		"quotes": ["error", "double"],
		"semi": ["error", "never"],
		"space-before-function-paren": ["error", {
			"anonymous": "never",
			"asyncArrow": "always",
			"named": "never"
		}],
		"space-in-parens": ["error", "never"]
	}
}