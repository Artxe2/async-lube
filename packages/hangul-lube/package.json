{
	"author": "artxe2",
	"bugs": {
		"url": "https://github.com/Artxe2/lube-series/issues"
	},
	"exports": {
		".": {
			"import": "./src/index.js",
			"require": "./hangul-lube.cjs",
			"types": "./types/index.d.ts"
		}
	},
	"description": "Simplify Korean Consonant Search in JavaScript",
	"keywords": [
		"hangul",
		"lube",
		"hangul-lube",
		"syntax sugar"
	],
	"license": "MIT",
	"main": "src/index.js",
	"name": "hangul-lube",
	"repository": {
		"type": "git",
		"url": "https://github.com/Artxe2/lube-series",
		"directory": "packages/hangul-lube"
	},
	"scripts": {
		"clean:win": "node -e \"if (process.platform === 'win32') process.exit(1)\" || , if exist types rmdir /Q /S types",
		"clean:lin": "node -e \"if (process.platform !== 'win32') process.exit(1)\" || rm -rf types",
		"cjs": "rollup src/index.js --file hangul-lube.cjs --format cjs",
		"dts": "npm run clean:win && npm run clean:lin && tsc",
		"test": "cd ../../test/hangul-lube/ && vitest run"
	},
	"type": "module",
	"types": "types/index.d.ts",
	"version": "1.3.2",
	"devDependencies": {
		"rollup": "^4.1.4"
	}
}